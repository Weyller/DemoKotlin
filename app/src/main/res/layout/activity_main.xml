<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bec3c9"
    tools:context="ca.qc.lbpsb.fusion.kotlindemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_wine_menu"/>
        <TextView
            android:id="@+id/selectFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"/>

        <EditText
            android:id="@+id/editFood"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:hint="add new food here..."/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_marginTop="20dp"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="add food"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>


    </LinearLayout>

    <Button
        android:id="@+id/btnDecide"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Decide!"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        />

</RelativeLayout>
